rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES - FIXAM GHANA
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // --- COLLECTION RULES ---

    match /admins/{adminId} {
      // Allow any signed-in user to check if admins exist (required for auto-provisioning)
      allow read: if isSignedIn();
      
      // Allow the very first admin to be created if the collection is empty
      // Or allow existing admins to create new ones
      allow create: if isSignedIn() && (
        !exists(/databases/$(database)/documents/admins/any_admin_placeholder) || 
        isAdmin() ||
        request.auth.uid == adminId // Allow self-provisioning if logic allows
      );
      allow update, delete: if isAdmin();
    }

    match /system_settings/{settingId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /providers/{providerId} {
      allow get, list: if true;
      
      // Public submission
      allow create: if request.resource.data.status == 'pending' 
                    && request.resource.data.verified == false;
      
      // Admin management
      allow update, delete: if isAdmin();
    }

    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if true; // Public submission for prototyping
      allow update, delete: if isAdmin();
    }

    match /jobs/{jobId} {
      allow get, list: if isAdmin();
      allow create: if true; // Public can request services
      allow update, delete: if isAdmin();
    }

    match /auditLogs/{logId} {
      allow read, write: if isAdmin();
    }
    
    match /provider_logs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}