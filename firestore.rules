rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /admins/{adminId} {
      allow get: if isSignedIn() && request.auth.uid == adminId;
      allow list: if isSignedIn();
      allow create: if isSignedIn(); // Permits system initialization by the first user
      allow update: if isAdmin();
    }

    match /providers/{providerId} {
      allow get, list: if true;
      allow create: if true;
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.authUid == request.auth.uid);
    }

    match /whatsapp_events/{eventId} {
      allow list, get: if isAdmin();
      allow create: if true; // Simulation creates these logs
    }

    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    match /auditLogs/{logId} {
      allow list, get: if isAdmin();
      allow create: if isAdmin() || isSignedIn(); // Allow logging during login/actions
    }

    match /jobs/{jobId} {
      allow list, get: if isAdmin();
      allow create: if true; // Allow customers to submit requests
      allow update: if isAdmin();
    }

    match /system_settings/{settingId} {
      allow get: if true; // App needs to check if logins are disabled
      allow write: if isAdmin();
    }

    match /provider_logs/{logId} {
      allow list, get: if isAdmin();
      allow create: if true;
    }
  }
}