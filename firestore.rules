
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for common security checks
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Admin Profiles
    match /admins/{adminId} {
      allow get: if isSignedIn() && request.auth.uid == adminId;
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == adminId; 
      allow update: if isAdmin();
    }

    // Providers: Publicly readable
    match /providers/{providerId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.authUid == request.auth.uid);
    }

    // WhatsApp Events
    match /whatsapp_events/{eventId} {
      allow list, get: if isAdmin();
      allow create: if true; 
    }

    // Services: Publicly readable
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Reviews: Publicly readable
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Audit Logs
    match /auditLogs/{logId} {
      allow list, get: if isAdmin();
      allow create: if isSignedIn();
    }

    // Jobs
    match /jobs/{jobId} {
      allow list, get: if isAdmin();
      allow create: if true; 
      allow update: if isAdmin();
    }

    // System Settings
    match /system_settings/{settingId} {
      allow get: if true; 
      allow write: if isAdmin();
    }

    // Provider Action Logs
    match /provider_logs/{logId} {
      allow list, get: if isAdmin();
      allow create: if true;
    }
  }
}
