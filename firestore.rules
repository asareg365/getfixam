rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES - FIXAM GHANA
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // --- COLLECTION RULES ---

    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    match /providers/{providerId} {
      allow get, list: if true;
      
      // Allow public users to submit their business for review
      allow create: if request.resource.data.status == 'pending' 
                    && request.resource.data.verified == false
                    && request.resource.data.rating == 0;
      
      allow update, delete: if false; 
    }

    match /providers/{providerId}/reviews/{reviewId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.providerId == providerId;
      allow update, delete: if false;
    }
    
    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if true; // Public submission for prototyping
      allow update, delete: if false;
    }
  }
}