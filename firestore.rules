
rules_version = '2';

// Last Updated: 2024-05-22T10:00:00Z - Triggering Security Rules Redeploy
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for common security checks
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Admin Profiles: Admins can manage themselves, Super Admins manage all
    match /admins/{adminId} {
      allow get: if isSignedIn() && (request.auth.uid == adminId || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn(); // Allow initial setup, though usually restricted by app logic
      allow update: if isAdmin();
    }

    // Providers: Publicly readable, managed by admins or the artisan themselves
    match /providers/{providerId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.authUid == request.auth.uid);
    }

    // WhatsApp Events: Internal logs for debugging and AI tracking
    match /whatsapp_events/{eventId} {
      allow list, get: if isAdmin();
      allow create: if true; 
    }

    // Services: Publicly readable directory categories
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Reviews: Publicly readable feedback
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Audit Logs: System-wide transparency
    match /auditLogs/{logId} {
      allow list, get: if isAdmin();
      allow create: if isSignedIn();
    }

    // Jobs: Operational tracking
    match /jobs/{jobId} {
      allow list, get: if isAdmin();
      allow create: if true; 
      allow update: if isAdmin();
    }

    // System Settings: Global configuration
    match /system_settings/{settingId} {
      allow get: if true; 
      allow write: if isAdmin();
    }

    // Provider Action Logs: Tracking artisan dashboard activity
    match /provider_logs/{logId} {
      allow list, get: if isAdmin();
      allow create: if true;
    }
  }
}
