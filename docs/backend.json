
{
  "entities": {
    "Provider": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Provider",
      "type": "object",
      "description": "Represents a local service provider (artisan).",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "serviceId": { "type": "string" },
        "phone": { "type": "string" },
        "whatsapp": { "type": "string" },
        "digitalAddress": { "type": "string" },
        "location": {
          "type": "object",
          "properties": {
            "region": { "type": "string" },
            "city": { "type": "string" },
            "zone": { "type": "string" }
          }
        },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected", "suspended"] },
        "verified": { "type": "boolean" },
        "rating": { "type": "number" },
        "reviewCount": { "type": "number" },
        "loginPin": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "Review": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Review",
      "type": "object",
      "description": "A customer review for a provider.",
      "properties": {
        "id": { "type": "string" },
        "providerId": { "type": "string" },
        "userName": { "type": "string" },
        "rating": { "type": "number" },
        "comment": { "type": "string" },
        "userImageId": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["providerId", "userName", "rating", "comment", "status", "createdAt"]
    },
    "Service": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Service",
      "type": "object",
      "description": "A category of artisan service.",
      "properties": {
        "name": { "type": "string" },
        "slug": { "type": "string" },
        "icon": { "type": "string" },
        "active": { "type": "boolean" },
        "basePrice": { "type": "number" }
      }
    },
    "Job": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Job",
      "type": "object",
      "description": "A service request or assignment.",
      "properties": {
        "serviceType": { "type": "string" },
        "area": { "type": "string" },
        "status": { "type": "string" },
        "providerId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "WhatsAppEvent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "WhatsAppEvent",
      "type": "object",
      "description": "Logs of interactions via the WhatsApp bot.",
      "properties": {
        "phone": { "type": "string" },
        "message": { "type": "string" },
        "role": { "type": "string", "enum": ["customer", "bot", "provider"] },
        "event": { "type": "string" },
        "aiParsed": {
          "type": "object",
          "properties": {
            "category": { "type": "string" },
            "area": { "type": "string" },
            "confidence": { "type": "number" }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["phone", "message", "role", "createdAt"]
    },
    "BotConfiguration": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BotConfiguration",
      "type": "object",
      "description": "API settings for the WhatsApp integration.",
      "properties": {
        "whatsappPhoneId": { "type": "string" },
        "whatsappAccessToken": { "type": "string" },
        "whatsappWebhookSecret": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "updatedBy": { "type": "string" }
      }
    },
    "Admin": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Admin",
      "type": "object",
      "description": "System administrator account.",
      "properties": {
        "email": { "type": "string" },
        "role": { "type": "string", "enum": ["admin", "super_admin"] },
        "active": { "type": "boolean" }
      }
    }
  },
  "auth": {
    "providers": ["password", "phone"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/providers/{providerId}",
        "definition": {
          "entityName": "Provider",
          "description": "Service providers/artisans."
        }
      },
      {
        "path": "/reviews/{reviewId}",
        "definition": {
          "entityName": "Review",
          "description": "Customer feedback and ratings."
        }
      },
      {
        "path": "/services/{serviceId}",
        "definition": {
          "entityName": "Service",
          "description": "Service categories."
        }
      },
      {
        "path": "/jobs/{jobId}",
        "definition": {
          "entityName": "Job",
          "description": "Customer job requests."
        }
      },
      {
        "path": "/whatsapp_events/{eventId}",
        "definition": {
          "entityName": "WhatsAppEvent",
          "description": "Logs of bot interactions."
        }
      },
      {
        "path": "/system_settings/whatsapp",
        "definition": {
          "entityName": "BotConfiguration",
          "description": "Meta API credentials for WhatsApp."
        }
      },
      {
        "path": "/admins/{adminId}",
        "definition": {
          "entityName": "Admin",
          "description": "Platform administrators."
        }
      }
    ]
  }
}
